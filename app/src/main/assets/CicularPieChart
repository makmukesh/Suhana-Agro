private PieChart mChart;

  public static final int[] MATERIAL_COLORS = {rgb("#2ecc71"), rgb("#f1c40f")};


    public static int rgb(String hex) {
          int color = (int) Long.parseLong(hex.replace("#", ""), 16);
          int r = (color >> 16) & 0xFF;
          int g = (color >> 8) & 0xFF;
          int b = (color >> 0) & 0xFF;
          return Color.rgb(r, g, b);
      }

    public int[] MATERIAL_COLORS_Master = {
              rgb("#2ecc71"), rgb("#f1c40f"), rgb("#ea5b02"), rgb("#3498db")
      };





        mChart = (PieChart) findViewById(R.id.MasterChart);

        mChart.setUsePercentValues(false);
        mChart.setExtraOffsets(5, 10, 5, 5);
        mChart.setDragDecelerationFrictionCoef(0.99f);
        mChart.setCenterTextTypeface(mTfRegular);
        mChart.setCenterText("\n\nTotal\nIncome");
        mChart.setCenterTextSize(18f);
        mChart.setHoleColor(Color.WHITE);
        mChart.setHoleRadius(75f);

        mChart.animateY(1400, Easing.EasingOption.EaseInOutQuad);

        mChart.setEntryLabelColor(Color.BLACK);
        mChart.setEntryLabelTypeface(mTfRegular);
        mChart.setEntryLabelTextSize(12f);
        mChart.setMaxAngle(360f);
        mChart.setRotationAngle(0f);

        mChart.setDrawHoleEnabled(true);
        mChart.setDrawCenterText(true);
        mChart.setTouchEnabled(true);
        mChart.setRotationEnabled(true);
        mChart.setHighlightPerTapEnabled(false);
        mChart.getDescription().setEnabled(false);
        mChart.setDrawEntryLabels(false);

        mChart.getLegend().setEnabled(false);


