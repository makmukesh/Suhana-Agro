private void setData(float value1, float value2, float value3, float value4) {

        ArrayList<PieEntry> entries = new ArrayList<PieEntry>();
        entries.add(new PieEntry(value1, ""));
        entries.add(new PieEntry(value2, ""));
        entries.add(new PieEntry(value3, ""));
        entries.add(new PieEntry(value4, ""));

        PieDataSet dataSet = new PieDataSet(entries, "");
        dataSet.setSliceSpace(2f);

        ArrayList<Integer> colors = new ArrayList<Integer>();

        for (int c : MATERIAL_COLORS_Master)
        colors.add(c);

        dataSet.setColors(colors);

        PieData data = new PieData(dataSet);
        data.setValueTextSize(12f);
        data.setValueTextColor(Color.BLACK);
        data.setValueTypeface(mTfRegular);
        data.setDrawValues(false);
        mChart.setData(data);

        mChart.highlightValues(null);
        mChart.invalidate();
        }



private void setData(float A, float B, PieChart chart) {
        ArrayList<PieEntry> entries = new ArrayList<PieEntry>();
        entries.add(new PieEntry(A, "Team A"));
        entries.add(new PieEntry(B, "Team B"));

        PieDataSet dataSet = new PieDataSet(entries, "");
        dataSet.setSliceSpace(2f);

        ArrayList<Integer> colors = new ArrayList<Integer>();

        for (int c : MATERIAL_COLORS)
        colors.add(c);

        dataSet.setColors(colors);

        PieData data = new PieData(dataSet);
        data.setValueTextSize(11f);
        data.setValueTextColor(Color.BLACK);
        data.setValueTypeface(mTfLight);
        data.setDrawValues(false);
        chart.setData(data);

        chart.highlightValues(null);
        chart.invalidate();
        }




