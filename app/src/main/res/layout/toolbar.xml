<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar

            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="?attr/colorPrimary"
            android:elevation="6dp"
            android:minHeight="?attr/actionBarSize"
            android:paddingEnd="00dp"
            android:paddingLeft="00dp"
            android:paddingRight="00dp"
            android:paddingStart="00dp"
            android:theme="?attr/actionBarTheme"
            app:subtitleTextColor="@color/app_color_white"
            app:theme="@style/ToolBarStyle"
            app:titleTextColor="@color/app_color_white"
            app:contentInsetLeft="5dp"
            app:contentInsetStart="5dp"
            app:contentInsetStartWithNavigation="5dp"
            >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/opensans_regular"
                    android:gravity="center"
                    android:text="@string/app_name"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_login_logout"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:focusableInTouchMode="false"
                        android:padding="3dp"
                        android:src="@drawable/ic_icon_log_out"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/img_cart"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_margin="2dp"
                        android:adjustViewBounds="true"
                        android:padding="3dp"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_menu_cart" />

                </LinearLayout>

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
</LinearLayout>